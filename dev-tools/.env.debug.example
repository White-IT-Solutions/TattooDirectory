# Debug Environment Configuration
# Copy this file to .env.debug and customize as needed

# Debug Mode Settings
ENABLE_BACKEND_DEBUG=true
ENABLE_FRONTEND_DEBUG=true
LOG_LEVEL=debug

# Port Configuration for Debugging
BACKEND_PORT=9000
BACKEND_DEBUG_PORT=9229
FRONTEND_PORT=3000
FRONTEND_DEBUG_PORT=9230
LOCALSTACK_PORT=4566
SWAGGER_PORT=8080

# LocalStack Configuration
LOCALSTACK_URL=http://localhost:4566
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=eu-west-2

# Database Configuration
DYNAMODB_TABLE_NAME=tattoo-directory-local
OPENSEARCH_ENDPOINT=http://localhost:4566

# Logging Configuration
LOG_FILE=./logs/aggregated.log
LOG_FORMAT=json
LOG_TIMESTAMP=true

# Development Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true

# Performance Settings
DOCKER_MEMORY_LIMIT=4g
DOCKER_CPU_LIMIT=2.0

# Debug Tools Configuration
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_MEMORY_PROFILING=false
ENABLE_CPU_PROFILING=false

# Test Configuration
TEST_TIMEOUT=30000
TEST_PARALLEL=false
HEADLESS=true
DEBUG_TESTS=false

# Security Settings (for local development only)
DISABLE_SSL_VERIFICATION=true
ALLOW_INSECURE_CONNECTIONS=true

# Feature Flags for Debugging
ENABLE_VERBOSE_LOGGING=true
ENABLE_REQUEST_TRACING=true
ENABLE_ERROR_STACK_TRACES=true
ENABLE_PERFORMANCE_METRICS=true