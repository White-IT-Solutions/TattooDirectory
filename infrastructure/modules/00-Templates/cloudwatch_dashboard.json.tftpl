          [".", "SearchLatency", ".", ".", ".", "."],
          [".", "IndexingLatency", ".", ".", ".", "."]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${aws_region}",
        "title": "OpenSearch Metrics",
        "period": 300
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 30,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/ECS", "CPUUtilization", "ServiceName", "${ecs_service_name}", "ClusterName", "${ecs_cluster_name}"],
          [".", "MemoryUtilization", ".", ".", ".", "."],
          [".", "RunningTaskCount", ".", ".", ".", "."]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${aws_region}",
        "title": "ECS Service Metrics",
        "period": 300
      }
    }
  ]
